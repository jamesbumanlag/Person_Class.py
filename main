# main class
class Person:
    def __init__(self, firstname, lastname, age, gender):
        self.firstname = firstname
        self.lastname = lastname
        self.age = age
        self.gender = gender

# create a class student as a inheritance of Class Person
class Student(Person):
    def __init__(self, firstname, lastname, age, gender, course, year_sec):
        super().__init__(firstname, lastname, age, gender)
        self.course = course
        self.year_sec = year_sec

# create a class Employee as a inheritance of Class Person
class Employee(Person):
    def __init__(self, firstname,lastname,age,gender,position,salary):
        super().__init__(firstname,lastname,age,gender)
        self.position = position
        self.salary = salary

# create an input_person function 
# to allow user to person input values
def input_person():
    firstname = input('Firstname: ')
    lastname = input('Lastname: ')
    age = input('Age: ')
    gender = input('Gender: ')
    return firstname, lastname, age, gender

# create an input_student function 
# inherited from input_person function 
# and add course and year_sec variable
def input_student():
    firstname, lastname, age, gender = input_person()
    course = input('Course: ')
    year_sec = input('Year/Section: ')
    return firstname, lastname, age, gender, course, year_sec

# create an input_employee function 
# inherited from input_person function 
# and add Position and Salary variable
def input_employee():
    firstname, lastname, age, gender = input_person()
    position = input('Position: ')
    salary = input('Salary: ')
    return firstname, lastname, age, gender, position, salary

# creata a function that will show the data of person function
def show_person(person):
    print()
    print('--------------------------------')
    print(f'Name: {person.firstname} {person.lastname}') 
    print(f'Age: {person.age}')
    print(f'Gender: {person.gender}')
    print('--------------------------------')

# creata a function that will show the data of student function
def show_student(student):
    print()
    print('*********************************')
    print(f'Name: {student.firstname} {student.lastname}') 
    print(f'Age: {student.age}')
    print(f'Gender: {student.gender}')
    print(f'Course: {student.course}')
    print(f'Year/Section: {student.year_sec}')
    print('*********************************')

# creata a function that will show the data of employee function
def show_employee(employee):
    print()
    print('---------------------------------')
    print(f'Name: {employee.firstname} {employee.lastname}')
    print(f'Age: {employee.age}')
    print(f'Gender: {employee.gender}')
    print(f'Position: {employee.position}')
    print(f'Salary: {employee.salary}')
    print('---------------------------------')
    
   
# Start of Main Program

while True:
    print('''
------------------------------
B-Tech Academy
Student : S
Employee : E
Exit : X
------------------------------
    ''')

    user = input('>>> ').upper()

    if user == 'S':
        while True:              
            # assign input_student function data 
            # to student_data variable
            student_data = input_student() 

            # extract all data of student data using '*' 
            # then used as parameter to Student Class 
            # and assigned to variable student
            student = Student(*student_data) 

            # show data of the show_person function 
            # from student variable
            # (student variable has all the data of person function)
            show_student(student)

            print('Add More? Y/N')
            user_choice = input('>>>  ').upper()
            if user_choice == 'N':
                break
            

    elif user == 'E':
        while True:
            # assign input_student function data 
            # to employee_data variable
            employee_data = input_employee()


            # extract all data of employee_data data using '*' 
            # then used as parameter to Employee Class 
            # and assigned to variable employee
            employee = Employee(*employee_data)

            # show data of the show_student function 
            # from employee variable
            # (employee variable has all the data of person function)
            show_employee(employee)

            print('Add More? Y/N')
            user_choice = input('>>>  ').upper()
            if user_choice == 'N':
                break
    
    
    # end the program            
    elif user == 'X': 
        break
    
    # continue the loop
    else: 
        continue
        
